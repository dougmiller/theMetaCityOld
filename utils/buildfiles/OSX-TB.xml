<?xml version="1.0"?>
<project name="Tags and Beans" default="package" basedir="../../tb">
    <property name="adminlib.dir" value="../theMetaCityAdmin/WEB-INF/lib" />
    <property name="app.name" value="theMetaCityTB" />
    <property name="builddest.dir" value="../" />
    <property name="classpath.dir" value="/usr/local/tomcat/lib" />
	<property name="compile.dir" value="classes" />
    <property name="junit.dir" value="/usr/local/junit" />    
	<property name="src.dir" value="src" />
    <property name="blog.dir" value="../blog/WEB-INF/lib" />
    <property name="rss.dir" value="../rss/WEB-INF/lib" />
    <property name="workshop.dir" value="../workshop/WEB-INF/lib" />

    <target name="clean">
        <delete dir="${compile.dir}" />
        <mkdir dir="${compile.dir}" />
	</target>

    <target name="compile" depends="clean">
		<javac srcdir="${src.dir}" destdir="${compile.dir}"
               classpath="${classpath.dir}/log4j-1.2.15.jar;
                          ${classpath.dir}/jsp-api.jar;
                          ${junit.dir}/junit-4.4.jar;"/>
	</target>

    <!-- Include on the the classes for development -->
    <target name="package" depends="compile">
        <!-- Include the taglib def list so that the jar actually will work, as it does no get compiled -->
        <copy file="${src.dir}/META-INF/themetacity.tld" toFile="${compile.dir}/META-INF/themetacityweb.tld" />
        <copy todir="${compile.dir}">
            <fileset dir="${src.dir}"/>
        </copy>
        <jar destfile="${builddest.dir}/${app.name}.jar" basedir="${compile.dir}"/>       <!-- Gets deleted -->
        <copy file="${builddest.dir}/${app.name}.jar" toFile="${blog.dir}/${app.name}.jar"/>
        <copy file="${builddest.dir}/${app.name}.jar" toFile="${adminlib.dir}/${app.name}.jar"/>
        <copy file="${builddest.dir}/${app.name}.jar" toFile="${rss.dir}/${app.name}.jar"/>
        <delete file="${builddest.dir}/${app.name}.jar"/>
    </target>

    <!-- Generate javadocs -->
    <target name="javadoc">
        <javadoc sourcepath="${src.dir}" destdir="${compile.dir}/javadoc" classpath="${classpath.dir}/jsp-api.jar; ${classpath.dir}/log4j-1.2.15.jar; ${junit.dir}/junit-4.4.jar;"/>
    </target>

    <!-- Include the source, classes and javadocs in the jar -->
    <target name="productionpackage" depends="compile, javadoc">
        <!-- Depends on compile so classes are already here -->
        <!-- Include the taglib def list so that the jar actually will work, as it does not get compiled -->
        <copy file="${src.dir}/META-INF/themetacity.tld" toFile="${compile.dir}/META-INF/themetacity.tld" />

        <!-- Copy the source across -->
            <copy todir="${compile.dir}">
                <fileset dir="${src.dir}"/>
            </copy>

        <!-- Copy the javadocs across -->
        <!-- Depends on javadoc so they are here also -->

        <!-- Now just package it all up -->
        <jar destfile="../theMetaCityTBProduction.jar" basedir="${compile.dir}"/>

    </target>

</project>