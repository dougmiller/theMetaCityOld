        <ant antfile="Gentoo-blog.xml" target="testpropackage" inheritAll="false"/>
        <ant antfile="Gentoo-workshop.xml" target="testpropackage" inheritAll="false"/>
        <ant antfile="Gentoo-rss.xml" target="testpropackage" inheritAll="false"/>
