    <target name="production" description="Build all the development apps from scratch">
        <ant antfile="Gentoo-TB.xml" target="package" inheritAll="false"/>
        <ant antfile="Gentoo-Root.xml" target="production" inheritAll="false"/>
        <ant antfile="Gentoo-blog.xml" target="production" inheritAll="false"/>
        <ant antfile="Gentoo-workshop.xml" target="production" inheritAll="false"/>
        <ant antfile="Gentoo-rss.xml" target="production" inheritAll="false"/>
        <ant antfile="Gentoo-OpenID.xml" target="production" inheritAll="false"/>
