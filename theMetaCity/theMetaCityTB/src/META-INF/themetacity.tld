<taglib xmlns="http://java.sun.com/xml/ns/j2ee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-jsptaglibrary_2_0.xsd"
        version="2.0">

    <!-- This is the custom tag library configuration file for theMeataCity -->

    <tlib-version>0.7</tlib-version>
    <short-name>tmc</short-name>
    <uri>http://com.themetacity</uri>

    <!-- Article tag -->
    <tag>
        <name>article</name>
        <tag-class>com.themetacity.tags.Article</tag-class>
        <body-content>empty</body-content>

        <!-- The article tag requires an article type bean -->
        <attribute>
            <name>article</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
            <type>com.themetacity.typebeans.ArticleBean</type>
        </attribute>
    </tag>

    <!-- Profile tag -->
    <tag>
        <name>profile</name>
        <tag-class>com.themetacity.tags.Profile</tag-class>
        <body-content>scriptless</body-content>

        <!-- The profile tag requires a profile type bean -->
        <attribute>
            <name>profile</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
            <type>com.themetacity.typebeans.ProfileBean</type>
        </attribute>
    </tag>

    <!--  Archive tag -->
    <tag>
        <name>archive</name>
        <tag-class>com.themetacity.tags.Archive</tag-class>
        <body-content>scriptless</body-content>

        <attribute>
            <name>title</name>
            <required>true</required>
        </attribute>
        <attribute>
            <name>picID</name>
            <required>true</required>
        </attribute>
        <attribute>
            <name>date</name>
            <required>true</required>
        </attribute>
    </tag>

    <!-- View tag -->
    <tag>
        <name>view</name>
        <tag-class>com.themetacity.tags.View</tag-class>
        <body-content>scriptless</body-content>

        <attribute>
            <name>picID</name>
            <required>true</required>
        </attribute>

        <attribute>
            <name>imgSrc</name>
            <required>true</required>
        </attribute>

        <attribute>
            <name>altTag</name>
            <required>true</required>
        </attribute>

        <attribute>
            <name>maxId</name>
            <required>true</required>
        </attribute>
    </tag>

    <!-- Search tag
    <tag>
        <name>search</name>
        <tag-class>com.themetacity.tags.Search</tag-class>
        <body-content>scriptless</body-content>
    </tag>-->

    <!-- Quote Bean -->
    <tag>
        <name>quote</name>
        <tag-class>com.themetacity.tags.Quote</tag-class>
        <body-content>scriptless</body-content>

        <attribute>
            <name>quoteAuthor</name>
            <required>true</required>
        </attribute>
    </tag>

</taglib>
